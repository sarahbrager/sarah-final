{% extends '_templates/base.njk' %}

{% block page_title %}Austin landmarks{% endblock %}

{% block page_description %}A list of popular landmarks around the city.{% endblock %}

{% block content %}
<div class="container">
  <div class="row justify-content-center">
      <div class="column col-md-10 col-lg-8">
        <h1>Visit the best sights around town</h1>
        <p>add something else here</p>
      </div>
  </div>
 <div class="row row-cols-1 row-cols-md-2 g-4 row-cols-lg-3 justify-content-center">
  {% for landmarks in atxdata.landmarks %}
  <div class="col">
    <div class="card h-100 text-bg-light border-dark">
      <div class="card-body">
        <div class="card-header border-dark">
          <h5 class="card-title">{{ landmarks.name }}</h5>
          <h6 class="card-subhead">{{ landmarks.established }}</h6>
          <p class="card-text pt-3">{{ landmarks.activities }}</p>
        </div>
        <div class="card-footer border-dark">
        <a href="{{ landmarks.url }}" class="card-link">Learn more about this landmark</a>
        </div>
      </div>
    </div>
  </div>
  {% endfor %}
  </div>
</div>
{% endblock %}