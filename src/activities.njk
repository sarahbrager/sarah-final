{% extends '_templates/base.njk' %}

{% block page_title %}Austin activities{% endblock %}

{% block page_description %}A list of pirate ships of lore from fact and fiction.{% endblock %}

{% block content %}
<div class="container">
  <div class="row justify-content-center">
      <div class="column col-md-10 col-lg-8">
        <h1>Need help planning your day-to-day?</h1>
        <p>add more here</p>
      </div>
  </div>
 <div class="row row-cols-1 row-cols-md-2 g-4 row-cols-lg-3 justify-content-center">
  {% for activities in atxdata.activities %}
  <div class="col">
    <div class="card h-100 text-bg-light border-dark">
      <div class="card-body">
        <div class="card-header border-dark">
          <h5 class="card-title">{{ activities.activity }}</h5>
          <h6 class="captain-name">{{ activities.date_time }}</h6>
          <p class="card-text pt-3">{{ activities.address }}</p>
        </div>
        <div class="card-footer border-dark">
        <a href="{{ activities.url }}" class="card-link">Visit their website</a>
        </div>
      </div>
    </div>
  </div>
  {% endfor %}
  </div>
</div>
{% endblock %}